<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <include layout="@layout/nav_bar_code" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/animate"
            android:layout_width="400.0dip"
            android:layout_height="400.0dip"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:src="@drawable/img_circle" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/animate2"
            android:layout_width="300.0dip"
            android:layout_height="400.0dip"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:src="@drawable/img_circle_2" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:hapticFeedbackEnabled="true"
                    android:src="@drawable/nfc_sony" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:hapticFeedbackEnabled="true"
                    android:src="@drawable/nfc" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="@string/touch_the_nfc_tag"
                android:textAlignment="gravity"
                android:textSize="30.0sp"
                android:textStyle="bold|italic"
                android:typeface="serif" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>